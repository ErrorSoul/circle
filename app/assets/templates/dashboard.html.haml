

.row
  .col-md-12
    /*%p {{posts}}*/
    %h1.center-block
      All Posts
      %a(href='#/posts/new')
        %span.glyphicon.glyphicon-pencil.pull-right  
        
    %hr
    %ul.media-list.posts
      %li.media.thumbnail.post-listing{"ng-repeat" => "post in posts"} 
        
        {{post.id}}
        %span.glyphicon.glyphicon-remove-sign.close-button.pull-right(ng-really-message="Вы уверены?" ng-really-click="delete($index)")
        %a(href='#/posts/{{post.id}}')
          %img.col-md-4.col-xs-4(ng-src="{{post.asset.url}}" ng-if="post.asset.url" )
        .media-body
          
          %a.thumb{:href => '#/posts/{{post.id}}', "ng-bind-html"=> 'post.title'}
          
          


          %p{"ng-bind-html"=> 'post.text'} 
           
